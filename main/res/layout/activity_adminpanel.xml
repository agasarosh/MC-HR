<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.saroshaga.hrapp.adminpanel">

    <EditText
        android:id="@+id/notice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="82dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:text="Notice"
        android:layout_below="@+id/display"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/notice_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Issue Notice"
        android:onClick="insert_notice"
        android:layout_below="@+id/notice"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Update: Name,Attendance,Salary"
        android:layout_marginTop="111dp"
        android:layout_below="@+id/notice_button"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/details_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="41dp"
        android:text="Update"
        android:onClick="insert_details"
        android:layout_below="@+id/details"
        android:layout_alignStart="@+id/notice" />

    <Button
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:onClick="logout"
        android:layout_alignTop="@+id/details_button"
        android:layout_alignEnd="@+id/notice" />

    <TextView
        android:id="@+id/display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="57dp"
        android:text="TextView"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/back"
        android:layout_alignStart="@+id/notice" />
</RelativeLayout>
